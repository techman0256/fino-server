{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    // "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "isolatedModules": true
}
